<header>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><i class="fas fa-dice"></i><span>Bankyo</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if logged_in? %>

            <li>
              <%=  link_to users_path,class: 'nav-link text-light' do %>
                <i class="fas fa-users"></i> users
              <% end %>
            </li>

            <li>
              <%=  link_to posts_path ,class: 'nav-link text-light' do %>
                <i class="fas fa-chess"></i> games
              <% end %>
            </li>

            <li>
              <%= link_to logout_path, method: :delete,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i>　logout
              <% end %>
            </li>

          <% elsif admin_logged_in? %>

            <li>
              <%=  link_to admin_users_path,class: 'nav-link text-light' do %>
                <i class="fas fa-users"></i> users
              <% end %>
            </li>

            <li>
              <%=  link_to admin_posts_path ,class: 'nav-link text-light' do %>
                <i class="fas fa-chess"></i> games
              <% end %>
            </li>

            <li>
              <%= link_to admin_logout_path, method: :delete,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i>　logout
              <% end %>
            </li>

          <% else %>

            <li>
              <%= link_to signup_path,class: 'nav-link text-light' do %>
                <i class="fas fa-user-plus"></i> sign up
              <% end %>
            </li>

            <li>
              <%= link_to login_path ,class: 'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i> login
              <% end %>
            </li>

            <li>
              <%= link_to guest_path, method: :post,class: 'nav-link text-light' do %>
                <i class="fas fa-user-astronaut"></i> guest login
              <% end %>
            </li>

          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>