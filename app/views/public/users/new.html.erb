<h1>新規登録</h1>

<%= form_with model: @user, url: users_path do |f| %>

<%= f.label :name, "name" %>
<%= f.text_field :name %>

<%= f.label :introduction, "introduction" %>
<%= f.text_field :introduction %>

<%= f.label :email, "email" %>
<%= f.email_field :email %>

<%= f.label :password, "password" %>
<%= f.text_field :password %>

<%= f.label :password_confirmation, "password_confirmation" %>
<%= f.text_field :password_confirmation %>

<%= f.submit "新規登録" %>

<% end %>