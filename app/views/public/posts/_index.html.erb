<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
          <%= image_tag post.get_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td id="favorite_buttons_<%= post.id %>">
          <%= render 'public/favorites/favorite', post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>