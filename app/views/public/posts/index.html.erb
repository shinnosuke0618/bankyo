<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 mx-auto">
      <h2 class="table-active">投稿一覧</h2>

      <div class="text-right mt-3 mb-3">
        <%= link_to '新規投稿する', new_post_path, class: 'btn btn-outline-dark' %>
      </div>


      <table class="table text-center">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>説明</th>
            <th>投稿者</th>
            <th></th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post.id) do %>
              <%= post.title %>
              <% end %>
            </td>
            <td><%= post.body %></td>
            <td>
              <%= post.user.name %>
            </td>

          </tr>
        <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>