<%= form_with model:post, local:true do |f| %>

  <div class="form-group mt-4">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control post_name' %>
  </div>

  <div class="form-group">
    <%= f.label :body, "説明" %>
    <%= f.text_area :body, class: 'form-control post_introduction' %>
  </div>
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  
<% end %>