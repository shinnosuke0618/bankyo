<div class="container">
  <div class="row">
    <div class="col-md-10 px-5 px-sm-0 mx-auto">

      <h2 class="mt-4">投稿編集</h2>

      <%= form_with model: @post, url: post_path(@post), local: true do |f| %>
        <div class="form-group mt-4">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: 'form-control item_name' %>
        </div>

        <div class="form-group">
          <%= f.label :body, "説明" %>
          <%= f.text_area :body, class: 'form-control item_introduction' %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>
</div>